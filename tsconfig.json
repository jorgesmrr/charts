{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es6", "dom", "es2016", "es2017"],

    "declaration": true,
    "outDir": "dist/esm",

    "strict": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "demo"]
}
